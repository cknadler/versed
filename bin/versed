#!/usr/bin/env ruby

require "optparse"
require "versed/version"
require "versed/generator"

###
# help text
###

BANNER = <<END
usage: versed [-h] [--version]
       versed <schedule> <log> [output_path]

END

DESC = <<END

Versed takes in two YAML files (schedule and weekly log) and outputs a visualization of time spent this week (in a PDF).
See https://github.com/cknadler/versed for more details.

END

###
# option parsing
###

opts = OptionParser.new do |o|
  o.banner = BANNER

  # other
  o.on("-h", "--help", "Print usage information") do
    puts o
    exit
  end
  o.on("--version", "Print version") do
    puts Versed::VERSION
    exit
  end

  o.separator DESC
end

begin
  opts.parse!
rescue OptionParser::InvalidOption => e
  puts e
  puts opts
  exit 1
end

if ARGV.size < 2
  puts opts
  puts "Too few arguments." unless ARGV.empty?
  exit 1
end

###
# run
###

Versed::Generator.run(ARGV[0], ARGV[1], ARGV[2])
